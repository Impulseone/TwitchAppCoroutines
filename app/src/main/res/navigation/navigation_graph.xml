<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/gamesListFragment">

    <fragment
        android:id="@+id/gamesListFragment"
        android:name="com.mycorp.twitchapprxjava.screens.games.GamesFragment"
        android:label="fragment_games_list"
        tools:layout="@layout/fragment_games">
        <action
            android:id="@+id/action_gamesListFragment_to_ratingFragment"
            app:destination="@id/ratingFragment"
            app:popUpTo="@id/gamesListFragment" />
        <action
            android:id="@+id/action_gamesListFragment_to_gameItemFragment"
            app:destination="@id/singleGameDataFragment" />
        <action
            android:id="@+id/action_gamesListFragment_to_favoriteGamesFragment"
            app:destination="@id/favoriteGamesFragment" />
    </fragment>
    <fragment
        android:id="@+id/ratingFragment"
        android:name="com.mycorp.twitchapprxjava.screens.rating.RatingFragment"
        android:label="fragment_rating"
        tools:layout="@layout/fragment_rating" />
    <fragment
        android:id="@+id/singleGameDataFragment"
        android:name="com.mycorp.twitchapprxjava.screens.game.SingleGameDataFragment"
        android:label="fragment_game_item"
        tools:layout="@layout/fragment_single_game_data" >
        <action
            android:id="@+id/action_gameItemFragment_to_followersListFragment"
            app:destination="@id/followersListFragment" />
    </fragment>
    <fragment
        android:id="@+id/followersListFragment"
        android:name="com.mycorp.twitchapprxjava.screens.followers.FollowersFragment"
        android:label="FollowersListFragment" />
    <fragment
        android:id="@+id/favoriteGamesFragment"
        android:name="com.mycorp.twitchapprxjava.screens.favoriteGames.FavoriteGamesFragment"
        android:label="fragment_favorite_games"
        tools:layout="@layout/fragment_favorite_games" />
</navigation>